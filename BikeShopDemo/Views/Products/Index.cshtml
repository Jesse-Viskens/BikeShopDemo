@model ICollection<Product>
<h1>Product Overview</h1>
@if (User.IsInRole("Administrator"))
{
    @Html.ActionLink("Add new Bike", "Create", "Products", null, new { @class = "btn btn-primary" });
}

<div class="container">
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="class=" col-md-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/Images/@p.Image" height="200px" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@p.Name.</h5>
                        <p class="card-text">This bike will cost you only @p.Price€!</p>
                        @Html.ActionLink("Go to details", "Detail", "Products", new { id = p.Id }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>